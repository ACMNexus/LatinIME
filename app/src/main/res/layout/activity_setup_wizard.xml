<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setup_wizard_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setup_wizard_bg_img"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/user_privacy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:minHeight="48.0dip"
        android:minLines="1"
        android:paddingEnd="8.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingStart="8.0dip"
        android:text="@string/setup_privacy_pre"
        android:textColor="@color/setup_wizard_privacy_text"
        android:textColorLink="@color/white"
        android:textSize="12.0sp" />

    <LinearLayout
        android:id="@+id/layout_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/user_privacy"
        android:layout_marginTop="16.0dip"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/setup_step1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30.0dip"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginStart="30.0dip"
            android:background="@drawable/setup_wizard_btn_step_background"
            android:gravity="center"
            android:lines="1"
            android:minHeight="44.0dip"
            android:paddingEnd="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingStart="16.0dip"
            android:text="@string/active_current_inputmethod"
            android:textColor="@color/setup_wizard_text_color"
            android:textSize="15.0sp"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/setup_step2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30.0dip"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginStart="30.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/setup_wizard_btn_step_background"
            android:gravity="center"
            android:lines="1"
            android:minHeight="44.0dip"
            android:text="@string/switch_current_inputmethod"
            android:textColor="@color/setup_wizard_btn_text_disable"
            android:textSize="15.0sp"
            app:textAllCaps="false" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/layout_action"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true" />

</RelativeLayout>
